{
  "version": 2,
  "buildCommand": "./vercel-build.sh",
  "outputDirectory": "frontend/dist",
  "installCommand": "npm install && cd backend && npm install && cd ../frontend && npm install",
  "functions": {
    "api/index.ts": {
      "maxDuration": 30
    },
    "api/reminders.ts": {
      "maxDuration": 30
    },
    "api/bot.ts": {
      "maxDuration": 30
    }
  },
  "crons": [
    {
      "path": "/api/reminders",
      "schedule": "* * * * *"
    }
  ],
  "routes": [
    {
      "src": "/api/bot",
      "dest": "/api/bot.ts"
    },
    {
      "src": "/api/reminders",
      "dest": "/api/reminders.ts"
    },
    {
      "src": "/api/health",
      "dest": "/api/health.ts"
    },
    {
      "src": "/api/(.*)",
      "dest": "/api/index.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
