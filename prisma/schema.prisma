// Prisma schema for Telegram Habits Tracker
// Копия схемы для генерации Prisma Client в корне проекта

generator client {
  provider = "prisma-client-js"
  output   = "../node_modules/.prisma/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Пользователь идентифицируется только по telegram_id
model User {
  id         String   @id @default(cuid())
  telegramId BigInt   @unique
  timezone   String   @default("UTC+3") // Часовой пояс пользователя (например, "UTC+3", "UTC+0")
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  // Подписка
  subscriptionType     String?  @default("free") // Тип подписки: "free" | "premium" | "trial"
  subscriptionStatus   String?  @default("active") // Статус подписки: "active" | "expired" | "canceled"
  subscriptionExpiresAt DateTime? // Дата окончания подписки
  subscriptionStartedAt DateTime? // Дата начала подписки

  habits Habit[]
  payments Payment[]
}

// Привычка пользователя
model Habit {
  id          String   @id @default(cuid())
  userId      String
  name        String
  description String?
  reminderTime String?
  reminderEnabled Boolean @default(true)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs   HabitLog[]

  @@index([userId])
}

// Лог выполнения привычки (отметка за день)
model HabitLog {
  id        String   @id @default(cuid())
  habitId   String
  date      DateTime @default(now())
  createdAt DateTime @default(now())

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, date])
  @@index([habitId])
  @@index([date])
}

// Платеж в ЮКассе
model Payment {
  id            String   @id @default(cuid())
  userId        String
  yookassaId    String?  @unique // ID платежа в ЮКассе (payment.id)
  amount        Float    // Сумма платежа в рублях
  currency      String   @default("RUB") // Валюта
  status        String   @default("pending") // Статус: "pending" | "succeeded" | "canceled" | "failed"
  paymentMethod String?  // Способ оплаты (банковская карта и т.д.)
  description   String?  // Описание платежа
  metadata      String?  // Дополнительные данные (JSON)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([yookassaId])
  @@index([status])
}
