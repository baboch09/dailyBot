// Prisma schema for Telegram Habits Tracker

generator client {
  provider = "prisma-client-js"
}

datasource db {
  // PostgreSQL для продакшена (Vercel)
  // В локальной разработке используйте schema.sqlite.prisma
  provider = "postgresql"
  // Используется DATABASE_URL или POSTGRES_URL из переменных окружения
  // Для build используется placeholder через vercel-build.sh скрипт
  url      = env("DATABASE_URL")
}

// Пользователь идентифицируется только по telegram_id
model User {
  id           String   @id @default(cuid())
  telegramId   BigInt   @unique // Используем BigInt для больших чисел telegram_id
  telegramName String?  // Username пользователя в Telegram (например, @username без @)
  timezone     String   @default("UTC+3") // Часовой пояс пользователя (например, "UTC+3", "UTC+0")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  // Подписка
  subscriptionType     String?  @default("free") // Тип подписки: "free" | "premium" | "trial"
  subscriptionStatus   String?  @default("active") // Статус подписки: "active" | "expired" | "canceled"
  subscriptionExpiresAt DateTime? // Дата окончания подписки
  subscriptionStartedAt DateTime? // Дата начала подписки

  habits Habit[]
  payments Payment[]
}

// Привычка пользователя
model Habit {
  id          String   @id @default(cuid())
  userId      String
  name        String   // Название привычки
  description String?  // Опциональное описание
  reminderTime String? // Время напоминания (формат: "HH:MM", например "09:00" или null если отключено)
  reminderEnabled Boolean @default(true) // Включено ли напоминание
  // Цели (PRO): опциональные поля, обратно совместимы
  goalEnabled   Boolean @default(false)
  goalType      String? // "streak" | "count" | "period"
  goalTarget    Int?    // для streak: 21/30/90 дней подряд; для count: количество раз
  goalPeriodDays Int?   // для period/count: окно в днях (21, 30, 90)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user   User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  logs   HabitLog[]

  @@index([userId])
}

// Лог выполнения привычки (отметка за день)
model HabitLog {
  id        String   @id @default(cuid())
  habitId   String
  date      DateTime @default(now()) // Дата выполнения (без времени, только день)
  createdAt DateTime @default(now())

  habit Habit @relation(fields: [habitId], references: [id], onDelete: Cascade)

  @@unique([habitId, date]) // Одна отметка на привычку в день
  @@index([habitId])
  @@index([date])
}

// Платеж в ЮКассе
model Payment {
  id            String   @id @default(cuid())
  userId        String
  yookassaId    String?  @unique // ID платежа в ЮКассе (payment.id)
  amount        Float    // Сумма платежа в рублях
  currency      String   @default("RUB") // Валюта
  status        String   @default("pending") // Статус: "pending" | "succeeded" | "canceled" | "failed"
  paymentMethod String?  // Способ оплаты (банковская карта и т.д.)
  description   String?  // Описание платежа
  metadata      String?  // Дополнительные данные (JSON)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([yookassaId])
  @@index([status])
}
